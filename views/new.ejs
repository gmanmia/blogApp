<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Blog entry title">
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image source">
        </div>
         <div class="field">
            <label>Entry Text</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui positive big basic button" type="submit">
    </form>
    
</div>


